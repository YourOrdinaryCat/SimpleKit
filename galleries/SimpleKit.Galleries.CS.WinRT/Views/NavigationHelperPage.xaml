<skun:NavPage
    x:Class="SimpleKit.Galleries.CS.WinRT.Views.NavigationHelperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skuc="using:SimpleKit.WindowsRuntime.UI.Controls"
    xmlns:skun="using:SimpleKit.WindowsRuntime.UI.Navigation"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <skuc:ExtendedTitleBar
            x:Name="TitleBar"
            Height="32"
            Padding="8,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Content="NavigationHelper" />

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="Press Alt + Left to go back, Alt + Right to move forward" />
            <Button
                Margin="0,6,0,0"
                Click="Button_Click"
                Content="Go to next page" />
        </StackPanel>
    </Grid>
</skun:NavPage>
